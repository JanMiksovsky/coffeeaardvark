{{ page.orit({
  title: _/name
  @text: `
    <header>
      <a href="/">Home</a>
    </header>
    <h2>{{ _/name }}</h2>
    <img src="/images/{{ _/image }}" alt="{{ _/name }}" class="large"/>
    <p>
      <button class="snipcart-add-item"
        data-item-id="{{ _/id }}"
        data-item-price="29.99"
        data-item-image="/images/{{ _/image }}"
        data-item-name="{{ _/name }}">
        Add to cart
      </button>
    </p>
  `
}) }}